# Django settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# Local dev: SQLite by default (USE_SQLITE=True, no config needed)
# Docker/Prod: PostgreSQL (settings below)
# USE_SQLITE=False  # Uncomment to force PostgreSQL locally
DB_ENGINE=django.db.backends.postgresql
DB_NAME=timetracker
DB_USER=timetracker
DB_PASSWORD=timetracker
DB_HOST=db
DB_PORT=5432

# CORS/CSRF for frontend
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend (Vite)
VITE_API_URL=http://localhost:8000

# ===== PRODUCTION SETTINGS =====
# Uncomment and set these values for production deployment

# SECRET_KEY=generate-strong-secret-key-minimum-50-chars
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# DB_PASSWORD=strong-postgres-password-change-this
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# VITE_API_URL=/api
